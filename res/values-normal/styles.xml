<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
	<style name="TitleText">
	    <item name="android:textSize">15sp</item>
	    <item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">-2</item>
		<item name="android:shadowDy">2</item>
		<item name="android:shadowRadius">1</item>
	</style>
	
	<style name="FormLabel">
		<item name="android:textSize">13sp</item>
	    <item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">-1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	    <item name="android:textColor">@color/label_color</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
	<style name="FormTextInput">
		<item name="android:textSize">13sp</item>
		<item name="android:paddingLeft">5dp</item>
	    <item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">-1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	    <item name="android:textColor">#494d51</item>
	    <item name="android:textStyle">normal</item>
	</style>
	
	<style name="FormSmallLabel">
		<item name="android:textSize">11sp</item>
		<item name="android:paddingLeft">5dp</item>
	    <item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">-1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	    <item name="android:textColor">#90969e</item>
	    <item name="android:textStyle">normal</item>
	</style>
	
	<style name="FormXSmallLabel">
		<item name="android:textSize">10.5sp</item>
		<item name="android:paddingLeft">10dp</item>
	    <item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">-1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	    <item name="android:textColor">#90969e</item>
	    <item name="android:textStyle">normal</item>
	</style>
	
	<style name="MenuText">
	    <item name="android:textSize">15sp</item>
	    <item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">-2</item>
		<item name="android:shadowDy">2</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/label_color</item>    
	</style>
	


</resources>